<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Text Style-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitleLarge" parent="TextStyle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleNormal" parent="TextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContentNormal" parent="TextStyle">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
    </style>

    <style name="TextContentLarge" parent="TextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContentItalicTiny" parent="TextStyle">
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textColor">@color/gray_30</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
    </style>

    <style name="TextContentTiny" parent="TextStyle">
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textColor">@color/gray_60</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextContentNormalNavy" parent="TextStyle">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
    </style>

    <style name="TextContentLargeNavy" parent="TextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
    </style>

    <!--Button Style-->
    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ButtonBorderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- button "see all" on home screen-->
    <style name="ButtonBorderlessTextNormal" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="ViewLineGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_30</item>
    </style>

    <style name="RecyclerViewHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">134dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

<style name="ProgressbarCustom" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:layout_width">70dp</item>
    <item name="android:layout_height">4dp</item>
    <item name="android:layout_marginTop">@dimen/spacing_small</item>
</style>


</resources>
